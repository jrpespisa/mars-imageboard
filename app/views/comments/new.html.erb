<h2>New Comment</h2>

<div class="row">
  <div class="small-6 small-centered columns border">
    <%= form_for [@image, @comment] do |f| %>
      <div class="form-inputs">
        <%= f.label :body, "Comment" %>
        <%= f.text_field :body %>
      </div>
      <div class="form-actions">
        <%= f.submit class: "button round form-button" %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="small-6 small-centered columns back-link">
    <%= link_to "Back", image_path(@image), class: "link" %>
  </div>
</div>
